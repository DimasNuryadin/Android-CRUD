<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".UtamaActivity">

    <RelativeLayout
        android:background="@color/bayangan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:text="CRUD"
        android:textStyle="bold"
        android:textColor="@color/putih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/tambah"
            android:background="@color/putih"
            android:textColor="@color/hitam"
            android:layout_marginTop="60dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Tambah Biodata"/>

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/tambah"
            android:background="@color/putih"
            android:text="LOGOUT"
            android:textColor="@color/hitam" />
        <Button
            android:id="@+id/pengaturan"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/logout"
            android:background="@color/putih"
            android:layout_marginTop="60dp"
            android:textColor="@color/hitam"
            android:text="Setting"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <ListView
            android:id="@+id/listView1"
            android:layout_below="@id/tambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>